# Application paths
INPUT_DIR=images
OUTPUT_DIR=results
LOG_DIR=logs

# Logging
LOG_LEVEL=INFO
LOG_MAX_SIZE_MB=10
LOG_OCR_VERBOSE=false
SAVE_OCR_DEBUG_FILES=false

# OCR settings
OCR_LANGUAGE=ru
OCR_CONFIDENCE_THRESHOLD=0.5
OCR_USE_GPU=false

# Image preprocessing - Adaptive Resolution
ENABLE_ADAPTIVE_SCALING=true
ADAPTIVE_SCALING_MIN_MP=5.0
ADAPTIVE_SCALING_TARGET_MP=6.0
ADAPTIVE_SCALING_MAX_WIDTH=3000
ADAPTIVE_SCALING_MAX_HEIGHT=2000

# OCR safety limits
OCR_MAX_IMAGE_DIMENSION=3000
OCR_DET_LIMIT_SIDE_LEN=2000

# Image preprocessing - Other settings
ENABLE_DESKEW=true
ENABLE_DENOISING=true
